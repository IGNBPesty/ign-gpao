<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("../partials/head") %>
</head>
<body class="container">

<header>
    <%- include ("../partials/header") %>
</header>

<script type="text/javascript">
	$(document).ready(function() {
		$('#chantier').DataTable();
	} );
</script>
  

<main>
    <div class="jumbotron">
        <h2>Visualisation des chantiers</h2>
	<table class="table table-striped table-bordered" style="width:100%" id="chantier">
		<thead>
		<tr>
			<th>id</th>
			<th>nom</th>
			<th>status</th>
			<th>priorite</th>
		</tr>
		</thead>
		<% json.forEach(function(chantier){ %>
		<tr>
			<td> <%= chantier.id %></td>
			<td> <%= chantier.nom %></td>
			<td> <%= chantier.status %></td>
			<td> <%= chantier.priorite %></td>
		</tr>
		<% }) %>
 
	</table>
    </div>
</main>

<footer>
    <%- include ("../partials/footer") %>
</footer>

</body>
</html>
